@page
@model eliza2_api.Pages.Mensagens.IndexModel
@{
    ViewData["Title"] = "Mensagens";
}

<h1>Mensagens</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Usuário</th>
            <th>Texto</th>
            <th>Resposta</th>
            <th>Data</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Mensagens)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.UsuarioId</td>
                <td>@item.TextoUsuario</td>
                <td>@item.RespostaBot</td>
                <td>@item.DataHora.ToString("dd/MM/yyyy HH:mm")</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                    <form asp-page-handler="Delete" asp-route-id="@item.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Tem certeza que deseja deletar?');">Deletar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-page="./Create" class="btn btn-success">Nova Mensagem</a>
